
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Categorias</h2>

<div class="container container-fluid">

   

    <div class="container-fluid">
        <h3 class="text-center mb-4 mt-4 text-info">Lista de Categorias</h3>
        <div class="row">
            <div class="col-12">
                <a href="/categoria/cadastro" class="btn btn-success ">Cadastro de nova categoria</a>
            </div>
        </div>



        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Opções</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (Model.Categoria categoria in ViewBag.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nome</td>
                        <td>
                            <a href="/categoria/editar?id=@categoria.Id" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>
                            <a href="/categoria/apagar?id=@categoria.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

