@{
    ViewBag.Title = "Index";
}

<div class="container container-fluid">



    <h3 class="text-center mb-4 mt-4 text-info">Lista de usuarios</h3>
    <div class="row">
        <div class="col-12">
            <a href="/usuario/cadastro" class="btn btn-success float-left mb-3">Cadastro de novo usuario</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Senha</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Senha</th>
                        <th>Opções</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                    {
                        <tr>
                            <td>@usuario.Id</td>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Login</td>
                            <td>@usuario.Senha</td>
                            <td>
                                <a href="/usuario/editar?id=@usuario.Id" class="btn btn-primary">
                                    <i class="fas fa-pen"></i> Editar
                                </a>
                                <a href="/usuario/apagar?id=@usuario.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
