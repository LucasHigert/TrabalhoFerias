@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<div class="row">
    <div class="col-12">
        <a href="/usuario/cadastro" class="btn btn-danger">Cadastro de Novo Usuario</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Opções</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Senha</td>
                        <td>
                            <a href="/usuario/editar?id=@usuario.Id" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>
                            <a href="/usuario/apagar?id=@usuario.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


