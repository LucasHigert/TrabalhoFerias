
@{
    ViewBag.Title = "Cadastro";
}
<div class="container container-fluid">
    <div class="row">
        <div class="container">
            <nav class="bg-dark navbar-nav rouded-bottom">
                <h3 class="align-baseline mb-3 mt-2 p-3 text-info">Cadastro de Usuario</h3>
            </nav>
        </div>
    </div>

    <form method="post" action="/usuario/store">


        <a href="/usuario/index" class="btn btn-danger">Lista de Usuários</a>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="campo-nome">Nome</label>
                    <input type="text" name="nome" class="form-control" id="campo-nome"required="" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="campo-login">Login</label>
                    <input type="text" name="login" class="form-control" id="campo-login" required=""/>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="campo-senha">Senha</label>
                    <input type="text" name="senha" class="form-control" id="campo-senha" required="" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>
        </div>

    </form>

</div>