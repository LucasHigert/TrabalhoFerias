
@{
    ViewBag.Title = "Index";
}

<h2>Estados</h2>

<div class="row">
    <div class="col-12">
        <a href="/estado/cadastro" class="btn btn-danger">Cadastro de Novo Estado</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Sigla</th>
                    <th>Opções</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Sigla</th>
                    <th>Opções</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (Model.Estado estado in ViewBag.Estados)
                {
                    <tr>
                        <td>@estado.Id</td>
                        <td>@estado.Nome</td>
                        <td>@estado.Sigla</td>
                        <td>
                            <a href="/estado/editar?id=@estado.Id" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>
                            <a href="/estado/apagar?id=@estado.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>