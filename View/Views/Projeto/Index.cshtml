
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container-fluid">
    <h3 class="text-center mb-4 mt-4 text-info">Lista de Projetos</h3>
    <div class="row">
        <div class="col-12">
            <a href="/projeto/cadastro/" class="btn btn-success float-left mb-3">Cadastro de novo projeto</a>
        </div>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome do Projeto</th>
                <th>Cliente</th>
                <th>Data de Criação</th>
                <th>Data de Conclusão</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Código</th>
                <th>Nome do Projeto</th>
                <th>Cliente</th>
                <th>Data de Criação</th>
                <th>Data de Conclusão</th>
                <th>Ação</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (Model.Projeto projeto in ViewBag.Projetos)
            {
                <tr>
                    <td>@projeto.Id</td>
                    <td>@projeto.Nome</td>
                    <td>@projeto.Cliente.Nome</td>
                    <td>@projeto.DataCriacao.ToShortDateString()</td>
                    <td>@projeto.DataConclusao.ToShortDateString()</td>
                    <td>
                        <a href="/projeto/editar?id=@projeto.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                        <a href="/projeto/apagar?id=@projeto.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
