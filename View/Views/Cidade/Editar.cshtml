
@{
    ViewBag.Title = "Editar";
}

<form method="post" action="/cidade/update">
    <h2>Editar</h2>

    <a href="/cidade/index" class="btn btn-danger">Lita de Cidades</a>
    <input type="hidden" name="id" value="@ViewBag.cidade.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" class="form-control" id="campo-nome" value="@ViewBag.cidade.Nome" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cpf">CPF</label>
                <input type="text" name="cpf" class="form-control" id="campo-cpf" value="@ViewBag.cidade.Cpf" />
            </div>
        </div>
    </div>
     

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-dataNascimento">Data de Nascimento</label>
                <input type="text" name="dataNascimento" class="form-control" id="campo-dataNascimento" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-numero">Numero</label>
                <input type="text" name="numero" class="form-control" id="campo-numero" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-complemento">Complemento</label>
                <input type="text" name="complemento" class="form-control" id="campo-complemento" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-logradouro">Logradouro</label>
                <input tye="text" name="logradouro" class="form-control" id="campo-logradouro" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cep">CEP</label>
                <input type="text" name="cep" class="form-control" id="campo-cep" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Salvar</button>
            </div>
        </div>
    </div>
</form>

