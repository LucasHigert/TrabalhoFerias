
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cidades</h2>
<div class="row">
    <div class="col-12">
        <a href=" /cidade/cadastro" class="btn btn-danger">Cadastro de Nova Cidade</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Numero de habitantes</th>
                    <th>Código do Estado</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Cidade cidade in ViewBag.Cidades)
                {
                    <tr>
                        <td>@cidade.Id</td>
                        <td>@cidade.Nome</td>
                        <td>@cidade.NumeroHabitantes</td>
                        <td>@cidade.IdEstado</td>
                        <td>
                            <a href="/cidade/editar?id=@cidade.Id" class="btn btn-primary">
                                <i class="fas fa-pen"></i>Editar
                            </a>
                            <a href="/cidade/apagar?id=@cidade.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i>Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Numero de habitantes</th>
                    <th>Código do Estado</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

