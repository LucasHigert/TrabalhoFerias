
@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <h3 class="text-center mb-4 mt-4 text-info">Lista de Clientes</h3>
    <div class="row">
        <div class="col-12">
            <a href="/cliente/cadastro" class="btn btn-success float-left mb-3">Cadastro de novo cliente</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Cidade</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Data de Nascimento</th>
                        <th>Número</th>
                        <th>Complemento</th>
                        <th>Logradouro</th>
                        <th>CEP</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Código</th>
                        <th>Cidade</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Data de Nascimento</th>
                        <th>Número</th>
                        <th>Complemento</th>
                        <th>Logradouro</th>
                        <th>CEP</th>
                        <th>Ação</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (Model.Cliente cliente in ViewBag.Clientes)
                    {
                        <tr>
                            <td>@cliente.Id</td>
                            <td>@cliente.Cidade.Nome</td>
                            <td>@cliente.Nome</td>
                            <td>@cliente.Cpf</td>
                            <td>@cliente.DataNascimento.ToShortDateString()</td>
                            <td>@cliente.Numero</td>
                            <td>@cliente.Complemento</td>
                            <td>@cliente.Logradouro</td>
                            <td>@cliente.Cep</td>
                            <td>
                                <a href="/cliente/editar?id=@cliente.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                                <a href="/cliente/apagar?id=@cliente.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
